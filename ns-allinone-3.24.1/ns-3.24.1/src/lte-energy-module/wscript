# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('lte-energy-module', ['core','lte'])
    module.source = [
        'model/lte-energy-module.cc',
        'helper/lte-energy-module-helper.cc',
        ]

    module_test = bld.create_ns3_module_test_library('lte-energy-module')
    module_test.source = [
        'test/lte-energy-module-test-suite.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'lte-energy-module'
    headers.source = [
        'model/lte-energy-module.h',
        'helper/lte-energy-module-helper.h',
        ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()

